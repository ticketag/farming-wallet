<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item_balance"
    android:orientation="vertical"
    android:padding="@dimen/ib_content_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ib_balance"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/ib_elements_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/ib_amount_placeholder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="@dimen/ib_separator_width"
            android:layout_height="@dimen/ib_separator_height"
            android:background="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/ib_corresponding_placeholder"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_wallet_address"
        android:gravity="center"
        android:text="@string/ib_wallet_address_placeholder"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small" />
</LinearLayout>