<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.FarmingWallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/item_add_wallet_radius">

        <ImageView
            android:id="@+id/iv_item_add_coin_coin_icon"
            android:layout_width="50dp"
            android:layout_height="@dimen/item_add_wallet_icon_size"
            android:contentDescription="@null"
            android:src="@drawable/ic_coin_chia" />

        <TextView
            android:id="@+id/tv_item_add_coin_coin_name"
            style="@style/styleTextNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/item_add_wallet_radius"
            android:text="@string/item_add_wallet_coin_name_placeholder"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tv_item_add_coin_coin_symbol"
            style="@style/styleTextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/item_add_wallet_radius"
            android:text="@string/coin_symbol_placeholder"
            android:textAllCaps="false" />
    </LinearLayout>

    <include layout="@layout/separator_accounts" />
</LinearLayout>