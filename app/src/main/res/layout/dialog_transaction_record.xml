<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?bottomSheetDialogTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_transaction_record_background"
    android:orientation="vertical"
    android:padding="16dp"
    app:cardCornerRadius="20dp"
    tools:context=".ui.wallet.TransactionRecordDialog">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_itr_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_receive_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_itr_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itr_operation_received"
            android:textColor="@color/accent"
            android:textSize="@dimen/text_size_normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dtr_items_vertical_spacing"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:text="@string/dtr_amount"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_itr_amount"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/itr_amount_placeholder"
                    android:textColor="@color/accent"
                    android:textSize="@dimen/text_size_small" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dtr_items_vertical_spacing">

                <TextView
                    android:layout_weight="1"
                    android:text="@string/dtr_date"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_dtr_date"
                    android:layout_weight="1"
                    android:alpha="0.65"
                    android:gravity="end"
                    android:text="@string/itr_date_placeholder"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dtr_items_vertical_spacing">

                <TextView
                    android:layout_weight="1"
                    android:text="@string/dtr_sender"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_dtr_sender"
                    android:layout_weight="1"
                    android:alpha="0.65"
                    android:gravity="end"
                    android:text="@string/dtr_sender_placeholder"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dtr_items_vertical_spacing">

                <TextView
                    android:layout_weight="1"
                    android:text="@string/dtr_receiver"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_dtr_receiver"
                    android:layout_weight="1"
                    android:alpha="0.65"
                    android:gravity="end"
                    android:text="@string/dtr_receiver_placeholder"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>