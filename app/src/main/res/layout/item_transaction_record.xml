<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/itr_card_margin"
    android:clipToPadding="false"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="@dimen/itr_card_corner_radius"
    app:contentPadding="@dimen/itr_card_content_padding"
    app:elevation="@dimen/itr_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_itr_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/itr_icon_padding"
            android:contentDescription="@null"
            android:src="@drawable/ic_receive_24" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_itr_operation"
                    android:layout_weight="1"
                    android:text="@string/itr_operation_received"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_itr_amount"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/itr_amount_placeholder"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_itr_date"
                    android:layout_weight="1"
                    android:alpha="0.65"
                    android:text="@string/itr_date_placeholder"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_itr_corresponding"
                    android:layout_weight="1"
                    android:alpha="0.65"
                    android:gravity="end"
                    android:text="@string/itr_corresponding_placeholder"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>