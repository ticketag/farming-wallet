<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/styleCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/itr_icon_padding"
            android:contentDescription="@null"
            android:src="@drawable/ic_transaction_received_24"
            app:tint="@color/white" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_itr_operation"
                    android:layout_weight="1"
                    android:text="@string/itr_operation_placeholder"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_itr_amount"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/itr_amount_placeholder"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_itr_date"
                    android:layout_weight="1"
                    android:text="@string/itr_date_placeholder"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_itr_corresponding"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/itr_corresponding_placeholder"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>