<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/icb_card_margin"
    android:clipToPadding="false"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="@dimen/icb_card_corner_radius"
    app:contentPadding="@dimen/icb_card_content_padding"
    app:elevation="@dimen/icb_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icb_icon"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/icb_icon_padding"
            android:contentDescription="@null"
            android:src="@drawable/ic_coin_chia" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:gravity="center_vertical">

                <TextView
                    android:id="@+id/icb_coin_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/icb_coin_name_placeholder"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/icb_coin_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/icb_coin_amount_placeholder"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_normal" />
            </TableRow>

            <TableRow android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/icb_coin_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.65"
                        android:text="@string/icb_value_placeholder"
                        android:textColor="?colorControlNormal"
                        android:textSize="@dimen/text_size_nano" />

                    <Space
                        android:layout_width="8dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/icb_coin_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/icb_change_placeholder"
                        android:textColor="@color/accent"
                        android:textSize="@dimen/text_size_nano" />

                </LinearLayout>

                <TextView
                    android:id="@+id/icb_coin_corresponding"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.65"
                    android:gravity="end"
                    android:text="@string/icb_corresponding_placeholder"
                    android:textColor="?colorControlNormal"
                    android:textSize="@dimen/text_size_small" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>