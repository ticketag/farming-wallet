<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tabWidgetStyle">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="buttonSplashActivity">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:paddingHorizontal">
            @dimen/activity_splash_button_padding
        </item>
        <item name="android:layout_width">
            @dimen/activity_splash_button_width
        </item>
        <item name="android:layout_height">
            @dimen/activity_splash_button_height
        </item>
        <item name="android:background">@drawable/button_light</item>
    </style>

    <style name="buttonStyleSendReceive">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:paddingHorizontal">@dimen/srb_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="styleTextHuge">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="styleTextHuge.Accent">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="styleTextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="styleTextLarge.Accent" parent="styleTextLarge">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="styleTextNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="styleTextNormal.Accent" parent="styleTextNormal">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="styleTextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>
</resources>