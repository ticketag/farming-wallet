<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="270" android:endColor="#081926" android:startColor="#194666" />
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="270" android:endColor="#040E15" android:startColor="#0E2739" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>