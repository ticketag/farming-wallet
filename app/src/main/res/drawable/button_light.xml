<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="270" android:endColor="#F20C2B43" android:startColor="#1C6EA8" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="180" android:endColor="#59492F6A" android:startColor="#00AD8DD6" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="270" android:endColor="#F2061622" android:startColor="#0E3450" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="180" android:endColor="#1A492F6A" android:startColor="#00AD8DD6" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/srb_radius" />
                    <gradient android:angle="270" android:endColor="#F22F3B45" android:startColor="#7AA1BD" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>